<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Shelf</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Google Fonts: Cormorant Garamond + Outfit -->
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Outfit:wght@300;400;500;600&display=swap" rel="stylesheet" />

  <!-- App Styles -->
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>

<!-- TOP BAR -->
<header class="topbar">
  <div class="topbar-inner">

    <!-- Logo -->
    <a href="/" class="logo">
      <span class="logo-icon">ğŸ“š</span>
      <span class="logo-text">Book<em>Shelf</em></span>
    </a>

    <!-- Desktop Search -->
    <form class="search-form" method="GET" action="/">
      <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" placeholder="Search by titleâ€¦" />
      <button type="submit">ğŸ”</button>
    </form>

    <!-- Desktop Nav -->
    <nav class="topbar-nav">
      <a href="/" class="nav-link">Library</a>

      <!-- Sort dropdown -->
      <form method="GET" action="/" style="display:inline;">
        <% if (typeof search !== 'undefined' && search) { %>
          <input type="hidden" name="search" value="<%= search %>" />
        <% } %>
        <select name="sort" class="sort-select" onchange="this.form.submit()">
          <option value="newest" <%= (typeof sort !== 'undefined' && sort === 'newest') ? 'selected' : '' %>>Newest</option>
          <option value="rating" <%= (typeof sort !== 'undefined' && sort === 'rating')  ? 'selected' : '' %>>Top Rated</option>
        </select>
      </form>

      <a href="/add" class="nav-link btn-add-nav">+ Add Book</a>
    </nav>

    <!-- Hamburger (mobile) -->
    <button class="hamburger" id="hamburger" aria-label="Menu">
      <span></span><span></span><span></span>
    </button>

  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobileMenu">
    <form class="m-search" method="GET" action="/">
      <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" placeholder="Search by titleâ€¦" />
      <button type="submit">ğŸ”</button>
    </form>

    <form method="GET" action="/">
      <select name="sort" onchange="this.form.submit()" style="background:rgba(255,255,255,0.06);border:1px solid rgba(178,144,106,0.25);border-radius:6px;color:rgba(196,168,130,0.85);font-family:var(--font-ui,sans-serif);font-size:0.85rem;padding:0.5rem 0.8rem;outline:none;width:100%;">
        <option value="newest" <%= (typeof sort !== 'undefined' && sort === 'newest') ? 'selected' : '' %>>Sort: Newest</option>
        <option value="rating" <%= (typeof sort !== 'undefined' && sort === 'rating')  ? 'selected' : '' %>>Sort: Top Rated</option>
      </select>
    </form>

    <a href="/">ğŸ“š Library</a>
    <a href="/add" class="m-add">+ Add Book</a>
  </div>
</header>

