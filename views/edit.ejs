<%- include("partials/header.ejs") %>

<h1>Edit Book</h1>

<form action="/edit/<%= book.id %>" method="POST">
  <label>Title:</label>
  <input type="text" name="title" value="<%= book.title %>" required><br><br>

  <label>Author:</label>
  <input type="text" name="author" value="<%= book.author_name %>" required><br><br>

  <label>ISBN:</label>
  <input type="text" name="isbn" value="<%= book.isbn %>" required><br><br>

  <label>Rating:</label>
  <input type="number" name="rating" min="1" max="5" value="<%= book.rating %>"><br><br>

  <label>Review:</label><br>
  <textarea name="review"><%= book.review %></textarea><br><br>

  <button type="submit">Update Book</button>
</form>

<%- include("partials/footer.ejs") %>